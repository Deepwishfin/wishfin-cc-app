<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_screen_back">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:padding="15dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/backarrow"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.wishfin_credit_card.FontClasses.PopinsSemibold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Login"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/headingbarfont" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="visible">


            <com.wishfin_credit_card.FontClasses.PopinsSemibold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Welcome Enablers"
                android:textColor="#0F2F4D"
                android:textSize="@dimen/headingfont" />

            <com.wishfin_credit_card.FontClasses.PoppinsRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="32dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=""
                android:textColor="#8181A1"
                android:textSize="@dimen/subheadingfont" />

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="8dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <com.wishfin_credit_card.FontClasses.PoppinsMedium
                        android:id="@+id/mobilenumberhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Mobile Number"
                        android:textColor="#2E384D"
                        android:textSize="14dp" />

                    <com.wishfin_credit_card.MenuHidingEditText
                        android:id="@+id/mobilenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:hint="Enter Mobile number"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="10"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="14dp" />

                    <com.wishfin_credit_card.FontClasses.PoppinsMedium
                        android:id="@+id/signupone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/roundedbutton"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">


            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Enter OTP"
                android:textColor="#2E384D"
                android:textSize="@dimen/headingfont" />

            <com.wishfin_credit_card.FontClasses.PoppinsRegular
                android:id="@+id/lastmobiletext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="32dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text=""
                android:textColor="#8181A1"
                android:textSize="@dimen/subheadingfont" />

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:elevation="8dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="15dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="32dp"
                        android:baselineAligned="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.wishfin_credit_card.MenuHidingEditText
                                android:id="@+id/otpone"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/otpedittextbackground"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.wishfin_credit_card.MenuHidingEditText
                                android:id="@+id/otptwo"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/otpedittextbackground"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.wishfin_credit_card.MenuHidingEditText
                                android:id="@+id/otpthree"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/otpedittextbackground"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <com.wishfin_credit_card.MenuHidingEditText
                                android:id="@+id/otpfour"
                                android:layout_width="45dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/otpedittextbackground"
                                android:gravity="center"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="1" />
                        </RelativeLayout>

                    </LinearLayout>


                    <com.wishfin_credit_card.FontClasses.PoppinsMedium
                        android:id="@+id/signupthree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/roundedbutton"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />

                    <com.wishfin_credit_card.FontClasses.PoppinsRegular
                        android:id="@+id/resentotp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:gravity="center"
                        android:text="Resend OTP"
                        android:textColor="#FF922D"
                        android:textSize="14dp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>