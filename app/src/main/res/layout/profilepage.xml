<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footerreli"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:background="@drawable/backarrow"
                android:contentDescription="TODO" />

            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:text="@string/profile"
                android:textColor="#2E384D"
                android:textSize="20dp" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/profileimage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/profilepic"
                        android:contentDescription="TODO" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <com.wishfin_credit_card.FontClasses.PopinsSemibold
                            android:id="@+id/heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#304258" />

                        <com.wishfin_credit_card.FontClasses.PoppinsRegular
                            android:id="@+id/desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/heading"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="#8181A1"
                            android:textSize="10dp" />
                    </RelativeLayout>


                </LinearLayout>


                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:elevation="8dp"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <LinearLayout
                            android:id="@+id/referfriendrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/refer" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView1"
                                android:gravity="center|left"
                                android:text="@string/shareapp"
                                android:textColor="#304258"
                                android:textSize="12dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/cibilrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/roundedlightgreen"
                            android:gravity="center"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="visible"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="TODO"
                                    android:src="@drawable/ic_cibil" />

                                <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                    android:id="@+id/checkcibil"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="12dp"
                                    android:layout_toEndOf="@+id/imageView2"
                                    android:gravity="center|left"
                                    android:text="@string/checkcibil"
                                    android:textColor="#304258"
                                    android:textSize="12dp"
                                    android:visibility="gone" />

                                <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                    android:id="@+id/cibildisplay"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="12dp"
                                    android:layout_toEndOf="@+id/imageView2"
                                    android:gravity="center|left"
                                    android:text="@string/yourcibilscore"
                                    android:textColor="#304258"
                                    android:textSize="12dp"
                                    android:visibility="gone" />


                                <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                    android:id="@+id/refreshscore"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="12dp"
                                    android:layout_toEndOf="@+id/imageView2"
                                    android:gravity="center|left"
                                    android:text="@string/refreshscore"
                                    android:textColor="#304258"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">


                                <com.wishfin_credit_card.FontClasses.PopinsSemibold
                                    android:id="@+id/cibilscore"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center|right"
                                    android:text=""
                                    android:textColor="#000000"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300" />


                        <LinearLayout
                            android:id="@+id/termsandconditionrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_term" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView11"
                                android:gravity="center|left"
                                android:text="@string/termsandconditions"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300"></View>

                        <LinearLayout
                            android:id="@+id/privacypolicyrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/privacy" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:text="@string/privacy_policy"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300" />

                        <LinearLayout
                            android:id="@+id/helpsupportrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/help" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/helpandsupport"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:text="@string/rateus"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300" />

                        <LinearLayout
                            android:id="@+id/contactusrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_contact" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/contactus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:text="@string/contactus"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300" />

                        <LinearLayout
                            android:id="@+id/languagerelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_logout" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/changelanguage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:text="@string/changeapplanguage"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/md_grey_300" />

                        <LinearLayout
                            android:id="@+id/logoutrelative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:contentDescription="TODO"
                                android:src="@drawable/ic_logout" />

                            <com.wishfin_credit_card.FontClasses.PoppinsMedium
                                android:id="@+id/logout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="12dp"
                                android:layout_toEndOf="@+id/imageView2"
                                android:gravity="center|left"
                                android:text="@string/logout"
                                android:textColor="#304258"
                                android:textSize="12dp" />


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include layout="@layout/footerprofile" />


</RelativeLayout>